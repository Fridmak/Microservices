{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Debug"
    }
  },
  "AllowedHosts": "*",
  "Cache": {
    "Enabled": true,
    "DefaultTTLSeconds": 60,
    "MaxBodySizeBytes": 1048576,
    "SlidingExpirationEnabled": true,
    "AbsoluteExpirationMinutes": null
  },
  "ReverseProxy": {
    "Routes": {
      "auth_route": {

        "ClusterId": "auth_cluster",
        "Match": {
          "Path": "/api/auth/{*remainder}"
        }
      },
      "tasks_route": {
        "ClusterId": "tasks_cluster",
        "Match": {
          "Path": "/api/tasks/{*remainder}"
        }
      },
      "notifications_route": {
        "ClusterId": "notifications_cluster",
        "Match": {
          "Path": "/api/notifications/{*remainder}"
        }
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth_service": {
            "Address": "http://localhost:5001"
          }
        }
      },
      "tasks_cluster": {
        "Destinations": {
          "tasks_service": {
            "Address": "http://localhost:5002"
          }
        }
      },
      "notifications_cluster": {
        "Destinations": {
          "notifications_service": {
            "Address": "http://localhost:5015"
          }
        }
      }
    }
  },
  "Jwt": {
    "Key": "JSgmq1p6]/1A-4fSV/<Z[hhM.d6Mt}^l",
    "Issuer": "AuthService",
    "Audience": "TaskManagementSystem"
  }
}